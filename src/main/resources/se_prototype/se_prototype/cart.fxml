                </StackPane>

                <!-- More Icon -->
                <VBox alignment="CENTER" spacing="5">
                    <ImageView fx:id="moreIcon" fitWidth="24" fitHeight="24" preserveRatio="true" />
                </VBox>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
