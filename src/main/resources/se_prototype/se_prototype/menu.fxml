<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="se_prototype.se_prototype.MenuController" style="-fx-background-color: #D6E2D3;">

    <!-- Header Section -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
        <ImageView fx:id="basket" pickOnBounds="true" preserveRatio="true"/>
        <Label text="Shop Your Daily Necessary"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
        <Button text="Get Started"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #27AE60; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" />
    </VBox>

    <!-- Product List Section (Scrollable) -->
    <ScrollPane fitToWidth="true" style="-fx-padding: 20;" prefHeight="400.0">
        <VBox fx:id="productContainer" spacing="10" alignment="CENTER_LEFT" />
    </ScrollPane>

    <!-- Bottom Navigation -->
    <HBox alignment="CENTER" spacing="30" style="-fx-padding: 10; -fx-background-color: #F5F5F5; -fx-border-color: #E5E5E5; -fx-border-radius: 10;">
        <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: #27AE60; -fx-font-size: 16px;" />
        <Button text="Favorites" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 16px;" />
        <Button text="Cart" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 16px;" />
        <Button text="Profile" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 16px;" />
    </HBox>
</VBox>