<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="se_prototype.se_prototype.MenuController" style="-fx-background-color: #D6E2D3;">

    <!-- Title -->
    <Label text="Grocery Store" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Scrollable Product List -->
    <ScrollPane fitToWidth="true" prefHeight="500.0" prefWidth="380.0">
        <VBox fx:id="productContainer" spacing="10" alignment="TOP_CENTER" />
    </ScrollPane>

    <!-- Basket Info -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Basket:" />
        <Label fx:id="basketCountLabel" text="0" style="-fx-font-weight: bold;" />
    </HBox>

    <!-- Checkout Button -->
    <Button text="Checkout" fx:id="checkoutButton" />
</VBox>
