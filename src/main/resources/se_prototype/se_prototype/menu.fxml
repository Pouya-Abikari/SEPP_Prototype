<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="se_prototype.se_prototype.MenuController"
            style="-fx-background-color: #D6E2D3;">

    <!-- Top Section -->
    <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
        <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 10;">
            <ImageView fx:id="basket" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true"/>
        </HBox>
    </VBox>

    <!-- Center Section (Scrollable Products) -->
    <ScrollPane fitToWidth="true" style="-fx-padding: 20;">
        <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="400">
            <Label text="Vegetables" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
            <GridPane hgap="15" vgap="15" style="-fx-padding: 10;">
                <!-- First Row -->
                <VBox alignment="CENTER" style="-fx-background-color: #F9F9F9; -fx-border-color: #E5E5E5; -fx-border-radius: 10; -fx-padding: 10;" maxWidth="150">
                    <Label text="Tomato" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <Label text=" " style="-fx-font-size: 12px; -fx-text-fill: #888;" />
                    <Button text="Add" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 5 10;" />
                </VBox>

                <VBox alignment="CENTER" style="-fx-background-color: #F9F9F9; -fx-border-color: #E5E5E5; -fx-border-radius: 10; -fx-padding: 10;" maxWidth="150">
                    <Label text="Pumpkin" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <Label text=" " style="-fx-font-size: 12px; -fx-text-fill: #888;" />
                    <Button text="Add" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 5 10;" />
                </VBox>

                <!-- Add more products here as needed -->
            </GridPane>
        </VBox>
    </ScrollPane>

    <!-- Bottom Navigation Bar -->
    <HBox alignment="CENTER" spacing="30" style="-fx-padding: 10; -fx-background-color: #F5F5F5; -fx-border-color: #E5E5E5; -fx-border-radius: 10;" BorderPane.bottom="CENTER">
        <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: #27AE60; -fx-font-size: 16px;" />
        <Button text="Favorites" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 16px;" />
        <Button text="Cart" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 16px;" />
        <Button text="Profile" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 16px;" />
    </HBox>
</BorderPane>